{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": [
      "element-plus/global",
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.ts",
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}