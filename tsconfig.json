{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "preserve",
    "types": [
      "element-plus/global",
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "types/**/*.d.ts",
    "env.d.ts",
    "example/**/*.vue"
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}